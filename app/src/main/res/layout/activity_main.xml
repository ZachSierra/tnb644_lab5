<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:orientation="vertical"

    tools:context=".MainActivity">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="582dp"
    >

    <Button
        android:backgroundTint="@color/black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ZoneX"
        android:text="X"
        android:layout_marginVertical="250dp"
        android:layout_marginHorizontal="50dp"/>
    <Button
        android:backgroundTint="@color/black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ZoneG"
        android:text="G"
        android:layout_marginVertical="160dp"
        android:layout_marginHorizontal="100dp"
        />

    <Button
        android:backgroundTint="@color/black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ZoneB"
        android:text="B"
        android:layout_marginVertical="225dp"
        android:layout_marginHorizontal="140dp"/>

    <Button
        android:backgroundTint="@color/black"
        android:id="@+id/ZoneD"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="225dp"
        android:layout_marginVertical="325dp"
        android:text="D" />
    <Button
        android:backgroundTint="@color/black"
        android:id="@+id/ZoneR"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="250dp"
        android:layout_marginVertical="275dp"
        android:text="R" />

    <Button
        android:backgroundTint="@color/black"
        android:id="@+id/ZoneTR"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="225dp"
        android:layout_marginVertical="100dp"
        android:text="TR" />
    <Button
        android:backgroundTint="@color/black"
        android:id="@+id/ZoneTY"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="275dp"
        android:layout_marginVertical="150dp"
        android:text="TY" />

</FrameLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo" />





</LinearLayout>